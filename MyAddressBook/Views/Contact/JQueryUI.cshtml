</style>
<script>

    $(DocumentIsReady);

    function DocumentIsReady() {

        //$('#target').click(function () {
        //    $(this).animate({
        //        width: "+=20",
        //        height: "+=20",
        //        "background-color": "red"
        //    });
        //});

        $('#target')
            .css("position", "relative")
            .on(
            {
                dblclick: function () {
                    $(this).animate({
                        width: "150",
                        height: "150",
                        "background-color": "red",
                        left: 1000
                    }, 1000, "easeOutCubic");
                },
                click: function () {
                    $(this).animate({
                        width: "100",
                        height: "100",
                        "background-color": "black",
                        left: 0
                    }, 1000, "easeOutCubic");
                }
            });

        $('#button1').button();

        $('#accordion').accordion({
            header: "h3",
            heightStyle: "content",
            activate: function (event, ui) {
                console.log(event);
                console.log(ui);
            }
        });
        $('#accordion').accordion("option", "active", 0);


        var classes = ["Javascript", "JQuery", "JQuery UI"];
        $('#search').autocomplete({
            source: "/JQueryUI/GetAddressBooks"
        });

        $('#tabs').tabs();

        $('#progress').progressbar({ value: 100 });

        $('#slider').slider({
            min: 0,
            max: 100,
            value: 100,
            slide: function (event, ui) {
                $('#entering').css('opacity', ui.value / 100);
            }
        });

        $('#dialog').dialog({
            beforeClose: function (event, ui) {
                //alert('closing dialog');
                //return false; // cancel close
            },
            autoOpen: false,
            width: 340,
            modal: false,
            buttons: {
                "Yes": function () {
                    $(this).dialog("close");
                    $('#entering').show();
                    countdown();
                },
                "No": function () {
                    $(this).dialog("close");
                }
            }
        });


        $("#mybutt").button({
            icons: { primary: "ui-icon-carat-1-n", secondary: "ui-icon-search" }            
        });

        $("#radio").buttonset();

        //$('#draggables').children().draggable();

        $('#d1').draggable({ axis: "x", containment: "#draggables" });
        $('#d2').draggable({ axis: "x", containment: "#draggables", helper: function () { return $("<div>The Letter B</div>") } });
        $('#d3').draggable({ axis: "x", containment: "#draggables", helper: "clone" });

        $('#d1, #d2, #d3').draggable("option", "stack", ".ui-draggable");
        $('#d1, #d2, #d3').draggable("option", "handle", "header");

        $('#d3').resizable({ aspectRatio: true });

        $("#dateselection").datepicker(
            {
                showAnim: "fold"
            });

        $('#entering').hide();

        $("#enter").click(function () {
            $("#dialog").dialog("open");
        });

        var value = 100
        function countdown() {
            value--;
            $('#progress').progressbar("option", "value", value);

            if (value > 0) {
                setTimeout(countdown, 100);
            }
            else {
                $('#progress').hide();
                $('#zone').text("Your In!");
            }
        }
    }
</script>

