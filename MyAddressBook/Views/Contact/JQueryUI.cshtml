<style>
    .ui-draggable
    {
        background-color: #808080;
        height: 100px;
        width: 100px;
        margin: 10px;
        box-shadow: 5px 5px 5px gray;
    }

    .ui-draggable header
    {
        background-color: #ffffff
    }

    #target {
        background-color: black;
        height: 100px;
        width: 100px;
        border: 2px solid gray;        
        border-radius: 25px;
